{%- style -%}
  .hero__bg {
    background-image: url('{{ section.settings.background_image | image_url: width: 1440 }}');
  }
{%- endstyle -%}

<section id="hero" class="hero">
  <div class="hero__bg">
    <div class="hero__content">
      <h2>
        {% comment %} PCレイアウト {% endcomment %}
        <span class="hero__heading hero__heading--pc">
          <span>{{ section.settings.heading_pc_line1 | replace: '、', '<span class="comma">、</span>' }}</span>
          <span>{{ section.settings.heading_pc_line2 | replace: '、', '<span class="comma">、</span>' }}</span>
        </span>
  
        {% comment %} SPレイアウト {% endcomment %}
        <span class="hero__heading hero__heading--sp">
          <span>{{ section.settings.heading_sp_line1 | replace: '、', '<span class="comma">、</span>' }}</span>
          <span>{{ section.settings.heading_sp_line2 | replace: '、', '<span class="comma">、</span>' }}</span>
          <span>{{ section.settings.heading_sp_line3 | replace: '、', '<span class="comma">、</span>' }}</span>
        </span>
      </h2>
      <div class="hero__button-wrapper">
        <div class="hero_button">
          {% render 'custom-button',
            btn_url: section.settings.button_url,
            btn_label: section.settings.button_label
          %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "背景画像"
    },
    {
      "type": "header",
      "content": "見出し（PC）"
    },
    {
      "type": "text",
      "id": "heading_pc_line1",
      "label": "PC：見出し 1行目",
      "default": "毎日に、心地よさをデザイン"
    },
    {
      "type": "text",
      "id": "heading_pc_line2",
      "label": "PC：見出し 2行目",
      "default": "サステナブルで美しい家具を、あなたの暮らしへ"
    },
    
    {
      "type": "header",
      "content": "見出し（SP）"
    },
    {
      "type": "text",
      "id": "heading_sp_line1",
      "label": "SP：見出し 1行目",
      "default": "毎日に、心地よさをデザイン"
    },
    {
      "type": "text",
      "id": "heading_sp_line2",
      "label": "SP：見出し 2行目",
      "default": "サステナブルで美しい家具を"
    },
    {
      "type": "text",
      "id": "heading_sp_line3",
      "label": "SP：見出し 3行目",
      "default": "あなたの暮らしへ"
    },
    {
      "type": "header",
      "content": "ボタンレイアウト"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "ボタン文言",
      "default": "View More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "リンク先"
    },
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}